# Application
APP_NAME=chat-server
APP_ENV=development
RUST_LOG=info,chat_api=debug,chat_gateway=debug

# API Server
API_HOST=127.0.0.1
API_PORT=8080

# Gateway Server
GATEWAY_HOST=127.0.0.1
GATEWAY_PORT=8081

# Database (PostgreSQL)
# NOTE: Docker Compose uses port 5433 to avoid conflicts with native PostgreSQL
DATABASE_URL=postgresql://postgres:<YOUR_PASSWORD>@localhost:5433/chat_db
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# JWT (IMPORTANT: Change JWT_SECRET in production - minimum 32 characters)
JWT_SECRET=<YOUR_JWT_SECRET_MINIMUM_32_CHARACTERS>
JWT_ACCESS_TOKEN_EXPIRY=900
JWT_REFRESH_TOKEN_EXPIRY=604800

# Snowflake ID Generator
WORKER_ID=0

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=50

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=10
